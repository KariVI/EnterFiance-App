<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#B1B1F2"
    tools:context=".CreateAccountOptional">

    <ImageView
        android:id="@+id/backButtonOptional"
        android:layout_width="42dp"
        android:layout_height="41dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/backarrow" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="20dp"
        android:fontFamily="@font/urbanistbold"
        android:text="Ayúdanos a conocer\nmás de ti"
        android:textSize="35dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/backButtonOptional" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:elevation="3dp"
        android:text="Completar tus datos"
        android:textColor="#4448AE"
        android:fontFamily="@font/urbanistbold"
        app:layout_constraintEnd_toEndOf="@+id/backgroundTwo"
        app:layout_constraintStart_toStartOf="@+id/backgroundTwo"
        app:layout_constraintTop_toTopOf="@+id/backgroundTwo" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:elevation="3dp"
        android:fontFamily="@font/urbanistbold"
        android:text="Continuar después"
        android:textColor="#4448AE"
        app:layout_constraintEnd_toEndOf="@+id/background"
        app:layout_constraintStart_toStartOf="@+id/background"
        app:layout_constraintTop_toTopOf="@+id/background" />


    <Button
        android:id="@+id/background"
        android:clickable="false"
        android:layout_width="300dp"
        android:layout_height="170dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/rounded_corner"
        android:backgroundTint="@color/white"
        android:text=""
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/backgroundTwo" />

    <Button
        android:id="@+id/backgroundTwo"
        android:layout_width="300dp"
        android:layout_height="170dp"
        android:layout_marginTop="75dp"
        android:clickable="false"
        android:background="@drawable/rounded_corner"
        android:backgroundTint="@color/white"
        android:text=""
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <Button
        android:id="@+id/buttonCompleteData"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/circle"
        android:backgroundTint="#B2B0F7"
        android:text="➜"
        android:textColor="#000000"
        android:textSize="14dp"
        app:layout_constraintBottom_toBottomOf="@+id/backgroundTwo"
        app:layout_constraintEnd_toEndOf="@+id/backgroundTwo"
        app:layout_constraintStart_toStartOf="@+id/backgroundTwo"
        app:layout_constraintTop_toTopOf="@+id/backgroundTwo" />

    <Button
        android:id="@+id/buttonCompleteLater"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/circle"
        android:backgroundTint="#B3AFFD"
        android:text="➜"
        app:layout_constraintBottom_toBottomOf="@+id/background"
        app:layout_constraintEnd_toEndOf="@+id/background"
        app:layout_constraintStart_toStartOf="@+id/background"
        app:layout_constraintTop_toTopOf="@+id/background" />

</androidx.constraintlayout.widget.ConstraintLayout>
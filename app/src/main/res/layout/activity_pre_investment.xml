<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D5D5EF"
    tools:context=".PreInvestment">

    <ImageView
        android:id="@+id/buttonBackToMenu"
        android:layout_width="42dp"
        android:layout_height="41dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:elevation="3dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/backarrow" />

    <TextView
        android:id="@+id/textWelcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:elevation="3dp"
        android:fontFamily="@font/urbanistbold"
        android:text="Inversión"
        android:textColor="#000000"
        android:textSize="30dp"
        app:layout_constraintBottom_toBottomOf="@+id/buttonBackToMenu"
        app:layout_constraintStart_toEndOf="@+id/buttonBackToMenu"
        app:layout_constraintTop_toTopOf="@+id/buttonBackToMenu" />

    <Button
        android:id="@+id/backgroundTwo"
        android:layout_width="297dp"
        android:layout_height="496dp"
        android:layout_marginTop="80dp"
        android:background="@drawable/rounded_corner"
        android:backgroundTint="@color/white"
        android:clickable="false"
        android:text=""
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textWelcome" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:elevation="3dp"
        android:fontFamily="@font/urbanistbold"
        android:text="¿Recuperaste tu retorno \nde inversión?"
        android:textAlignment="center"
        android:textColor="#4448AE"
        android:textSize="24dp"
        app:layout_constraintEnd_toEndOf="@+id/backgroundTwo"
        app:layout_constraintHorizontal_bias="0.531"
        app:layout_constraintStart_toStartOf="@+id/backgroundTwo"
        app:layout_constraintTop_toBottomOf="@+id/imageView3" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="247dp"
        android:layout_height="110dp"
        android:layout_marginTop="20dp"
        android:elevation="3dp"
        android:fontFamily="@font/urbanistbold"
        android:text="Un ROI aceptable para una campaña\n de marketing oscila entre 4:1 y 6:1. "
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="18dp"
        app:layout_constraintEnd_toEndOf="@+id/backgroundTwo"
        app:layout_constraintStart_toStartOf="@+id/backgroundTwo"
        app:layout_constraintTop_toBottomOf="@+id/textView8" />

    <Button
        android:id="@+id/buttonLearnInvestment"
        android:layout_width="154dp"
        android:layout_height="60dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/rounded_corner"
        android:backgroundTint="#D5D5F1"
        android:fontFamily="@font/urbanistbold"
        android:text="Aprende a calcularlo"
        app:layout_constraintEnd_toEndOf="@+id/backgroundTwo"
        app:layout_constraintStart_toStartOf="@+id/backgroundTwo"
        app:layout_constraintTop_toBottomOf="@+id/textView9" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="132dp"
        android:layout_height="120dp"
        android:layout_marginTop="20dp"
        android:elevation="3dp"
        android:scaleX="2"
        android:scaleY="2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/backgroundTwo"
        app:srcCompat="@drawable/investment" />
</androidx.constraintlayout.widget.ConstraintLayout>